<!-- include header -->
<%- include('partials/_header')%>
<div class="container">
<a href="/show/<%= user.id %>" class="button"><i class="fas fa-backward"></i></a></br></br>
</div>
<div class="container head">
    <h2>Edit Blog</h2>
</div>

<div class="container">
    <!-- <h2><%= title %></h2> -->
    <form action="/update" method="post">
        <input type="hidden" value="<%= user.id %>" name="id">
      <div class="form-group">
        <label for="title">Title:</label>
        <input type="text" class="form-control" id="name" value="<%= user.title %>" placeholder="Enter Title" name="title" required>
      </div>
    </br>
      <div class="form-group">
        <label for="categories">Categories:</label>
        <input type="text" class="form-control" id="categories" value="<%= user.categories %>" placeholder="Enter categories" name="categories" required>
      </div></br>
      <div class="form-group">
        <label for="Content">Content</label>
        <textArea class="form-control" id="content"  placeholder="Enter Content" name="content" required><%= user.content %></textArea>
      </div></br>
      <div>
      <button type="submit" class="btn btn-primary">Submit</button>
      <button type="reset" class="btn btn-warning">Cancel</button>
    </div>
    </form>
  </div>

  <% if(check=="true") { %>
    <div class="row d-flex justify-content-center fixed-top">
      <div class="col-lg-6 ">
          <div class="alert alert-success alert-dismissible fade show" id="alert">
              <button type="button" class="clear" style="float: right;" onclick="document.location.href='/'" data-dismiss="alert">&times;</button>
              <strong>Success </strong> Update Successfully !!.
          </div>
      </div>       
  </div>  
  <% } %>

  <%- include('partials/_footer')%>
